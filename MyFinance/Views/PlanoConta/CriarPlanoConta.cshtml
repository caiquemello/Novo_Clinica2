@model PlanoContaModel

@{
    ViewData["Title"] = "Cadastrar Funcionario";
}

<h3>Cadastrar Funcionario</h3>

<form asp-controller="PlanoConta" asp-action="CriarPlanoConta">

    <div class="form-group">
        <label>Nome:</label>
        <input type="text" class="form-control" asp-for="Id">
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Saldo:</label>
        <input type="text" class="form-control" asp-for="Saldo">
        <span asp-validation-for="Saldo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-block btn-success">Registrar</button>

</form>
